{
    "name": "njoguamos/laravel-waha",
    "description": "An opinionated Laravel package for interacting with WAHA API",
    "type": "library",
    "license": "MIT",
    "keywords": ["waha", "whatsapp", "api", "laravel", "php"],
    "authors": [
        {
            "name": "Njogu Amos",
            "email": "njoguamos@gmail.com"
        }
    ],
    "require": {
        "php": "^8.4",
        "illuminate/support": "^12.0 || ^13.0",
        "saloonphp/saloon": "^3.0",
        "giggsey/libphonenumber-for-php-lite": "^9.0"
    },
    "require-dev": {
        "laravel/pint": "^1.25",
        "pestphp/pest": "^3.8.4 || ^4.0.0",
        "orchestra/testbench": "^10.0 || ^11.0"
    },
    "autoload": {
        "psr-4": {
            "NjoguAmos\\Waha\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "NjoguAmos\\Waha\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "format": "./vendor/bin/pint --parallel",
        "test": "./vendor/bin/pest",
        "lint": [
            "@php vendor/bin/pint --ansi"
        ]
    },
    "extra": {
        "laravel": {
            "providers": [
                "NjoguAmos\\Waha\\WahaServiceProvider"
            ],
            "aliases": {
                "Status": "NjoguAmos\\Waha\\Facades\\Status",
                "Contacts": "NjoguAmos\\Waha\\Facades\\Contacts"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "archive": {
        "exclude": [
            "/tests",
            "/.github",
            "/.gitignore",
            "/docs"
        ]
    }
}
